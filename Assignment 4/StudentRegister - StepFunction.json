{
  "StartAt": "createStudent",
  "States": {
    "createStudent": {
      "Type": "Task",
      "Resource": "***:function:createStudent",
      "Next": "courseRegisterCheck"
    },
    "courseRegisterCheck": {
      "Type": "Task",
      "Resource": "***:function:courseRegister",
      "Next": "isRegistered"
    },
    "isRegistered": {
      "Type": "Choice",
      "Choices": [
        {
           "Variable": "$.isRegister",
           "StringEquals": "true",
           "Next": "chargeCourse"
        },
        {
          "Variable": "$.isRegister",
          "StringEquals": "false",
          "Next": "registerService"
        }
      ],
      "Default": "DefaultState"
    },
    "chargeCourse": {
      "Type": "Task",
      "Resource": "***:function:chargeCourse",
      "Next": "notifyStudent"
    },
    "DefaultState": {
      "Type": "Fail",
      "Error": "DefaultStateError",
      "Cause": "No Mathces!"
    },
    "notifyStudent": {
      "Type": "Task",
      "Resource": "***:function:notifyStudent",
      "End": true
    },
    "registerService": {
      "Type": "Task",
      "Resource": "***:function:registerService",
      "End": true
    }
  }
}